<?xml version="1.0"?>
<Template originator="Michael Hutchinson" created="2010/06/05">
	
	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Xamarin.Mac Project</_Name>
		<_Category>F#/Mac</_Category>
		<LanguageName>F#</LanguageName>
		<_Description>Creates a Xamarin.Mac project.</_Description>
	</TemplateConfiguration>
	
	<!-- Actions -->
	<Actions>
		<Open filename = "Main.fs"/>
	</Actions>
	
	<!-- Template Content -->
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
			<OtherFlags>--noframework</OtherFlags>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "XamMac">
			<Options />
			<References>
				<Reference type="Gac" refto="mscorlib" />
				<Reference type="Gac" refto="System" />
				<Reference type="Gac" refto="System.Xml" />
				<Reference type="Gac" refto="System.Core" />
				<Reference type="Gac" refto="System.Xml.Linq" />
				<Reference type="Gac" refto="System.Drawing" />
				<Reference type="Gac" refto="FSharp.Core" />
				<Reference type="Gac" refto="XamMac" SpecificVersion="false" />
			</References>
			<Files>
				<Directory name="Resources" />
				<FileTemplateReference TemplateID="FSharpXamMacApplicationManifest" />
				<File name="AppDelegate.fs" >
<![CDATA[namespace ${Namespace}

    open System
    open System.Drawing
    open MonoMac.Foundation
    open MonoMac.AppKit
    open MonoMac.ObjCRuntime

    [<MonoMac.Foundation.Register("AppDelegate")>]
    type AppDelegate () =
        inherit NSApplicationDelegate ()

        [<DefaultValue>]
        val mutable mainWindowController : ${Namespace}.MainWindowController

        override x.FinishedLaunching (notification) =
            let mainWindowController = new ${Namespace}.MainWindowController ()
            mainWindowController.Window.MakeKeyAndOrderFront (x)
]]></File>
                <!-- it must be placed at the end of the files -->
                <File name="Main.fs"><![CDATA[
    open System
    open System.Drawing
    open MonoMac.Foundation
    open MonoMac.AppKit
    open MonoMac.ObjCRuntime

    [<EntryPoint>]
    let main args =
        NSApplication.Init ()
        NSApplication.Main (args)
        0
]]></File>
			</Files>
		</Project>
	</Combine>
</Template>
